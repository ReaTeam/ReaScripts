  for i =1, #repos do
    reaper.ReaPack_AddSetRepository(
      repos[i].name,--string name, 
      repos[i].url,--string url, 
      true,--boolean enable, 
      2,--integer autoInstall, 
      true)--boolean commit)
  end
  
