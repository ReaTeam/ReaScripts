  #new_chunk_points += sprintf(#, "%f ", 0);
  #new_chunk_points += sprintf(#, "%f ", -GetMediaItemTakeInfo_Value(take, "D_PAN")); 
  #new_chunk_points += "0 0 1";
  #new_chunk_points += "\n";
  //#new_chunk_points != "" ? 1 : 0;
  //#new_chunk_points != "" ? create_new_envelope()
