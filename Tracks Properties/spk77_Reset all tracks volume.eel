// Reset track volume faders to 0 dB - EEL script by spk77 8.2.2015
// Version: 0.2015.2.8

function reset_vol() local(i, tr)
(
  i = 0;
  loop(CountTracks(0),
    (tr = GetTrack(0, i)) ? (
      SetMediaTrackInfo_Value(tr, "D_VOL", 1.0);
    );
    i += 1;
  );
  Undo_OnStateChangeEx2(0, "Reset track volume faders to 0 dB", -1, -1);
);

reset_vol();
